@model SportsStore.Domain.Models.Order
@{
	ViewData["Title"] = "Create Order";
}
<h1>Create New Order</h1>
<form asp-action="SubmitOrder" method="post">
	<div class="form-group">
		<label asp-for="CustomerName"></label>
		<input asp-for="CustomerName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="ProductName"></label>
		<input asp-for="ProductName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Quantity"></label>
		<input asp-for="Quantity" type="number" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="ShippingAddress"></label>
		<input asp-for="ShippingAddress" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary mt-3">
		Submit
		Order
	</button>
</form>
<p class="mt-3">
	<a asp-action="Index" asp-controller="Home">
		Quay về trang chủ
	</a>
</p>